<h1>Корзина</h1>

<div id="card">

{{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Цена за товар</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td class="price price-small">{{price}}</td>
                <td>
                    <button class="btn btn-small js-remove" data-id="{{id}}">Удалить</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <p><strong>Цена: </strong><span class="price price-all">{{price}}</span></p>

</div>
{{else}}
<p>Корзина пуста</p>
{{/if}}